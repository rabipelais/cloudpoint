  main-is:             Main.hs
  other-modules:       Point, Sampling, Normals, Convex
  -- other-extensions:
  C-sources:           cbits/convexhull.cpp
  Include-dirs:        include
  CC-Options:          -fpic -DEIGEN_USE_NEW_STDVECTOR -DEIGEN_YES_I_KNOW_SPARSE_MODULE_IS_NOT_STABLE_YET -DFLANN_STATIC -Wno-deprecated -I/usr/include/vtk-5.8 -I/usr/include/pcl-1.7 -I/usr/include/eigen3 -I/usr/include/ni
