  extra-lib-dirs:      libs
  extra-libraries:     stdc++ pcl_io boost_system boost_filesystem boost_thread boost_date_time boost_iostreams boost_serialization pthread pcl_common pcl_octree boost_system boost_filesystem boost_thread boost_date_time boost_iostreams boost_serialization pthread pcl_common qhull pcl_surface OpenNI pcl_io pcl_filters pcl_search pcl_sample_consensus chull
  ghc-options:         -Wall
                       -fno-warn-type-defaults
                       -fllvm
                       -O2
                       -Odph
  default-language:    Haskell2010